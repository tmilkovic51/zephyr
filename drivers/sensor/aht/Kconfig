# AHT1x/AHT2x/AHT3x temperature and humidity sensor configuration options

# Copyright (c) 2023 Tomislav Milkovic
# SPDX-License-Identifier: Apache-2.0

menuconfig AHT
	bool "AHT1x/AHT2x/AHT3x temperature and humidity sensor"
	default y
	depends on DT_HAS_AOSONG_AHT_ENABLED
	select I2C
	select CRC
	help
	  Enable driver for AHT1x/AHT2x/AHT3x series of temperature and humidity sensors.
